prefix = @CMAKE_INSTALL_PREFIX@
libdir = ${prefix}/@CMAKE_INSTALL_FULL_LIBDIR@
includedir = ${prefix}/@CMAKE_INSTALL_INCLUDEDIR@

Name: @PROJECT_NAME@
Description: NONLIN is a modern Fortran library that provides routines to compute the solutions to systems of nonlinear equations.
Version: @PROJECT_VERSION@
URL: https://github.com/jchristopherson/nonlin
Libs: -L${libdir} -l@PROJECT_NAME@
Cflags: -I${includedir}